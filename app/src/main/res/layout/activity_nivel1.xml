<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondopuzzleamarillo"
    tools:context=".Nivel1Activity">

    <Button
        android:id="@+id/btn_Volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:onClick="Volver"
        android:text="@string/btn_Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.585"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="#8E9896"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/badger"
        tools:layout_editor_absoluteY="130dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="176dp"
        android:backgroundTint="#8E9896"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/bear"
        tools:layout_editor_absoluteY="130dp" />

    <EditText
        android:id="@+id/et_Instrucciones"
        android:layout_width="380dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="@string/et_Instrucciones"
        android:inputType="text"
        android:textColorHint="@color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="43dp" />
</androidx.constraintlayout.widget.ConstraintLayout>